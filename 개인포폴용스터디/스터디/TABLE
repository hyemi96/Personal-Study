-- 공지사항 테이블

CREATE TABLE TB_NOTICE (
	NOTICE_SEQ NUMBER,
	NOTICE_WRITER_ID VARCHAR2(30) NOT NULL,
	NOTICE_SUBJECT VARCHAR2(100) NOT NULL,
	NOTICE_CONTENTS VARCHAR2(4000) NOT NULL,
	NOTICE_REG_ID VARCHAR2(30) NOT NULL,
	NOTICE_REG_DT DATE DEFAULT SYSDATE,
	NOTICE_MOD_ID VARCHAR2(30),
	NOTICE_MOD_DT DATE,
	NOTICE_DEL_ID VARCHAR2(30),
	NOTICE_DEL_DT DATE,
	NOTICE_VIEWS NUMBER,
	USE_YN VARCHAR2(1) DEFAULT 'Y',

	PRIMARY KEY (NOTICE_SEQ)
)



CREATE SEQUENCE TB_NOTICE_SEQ
START WITH 1
INCREMENT BY 1;

-- 데이터 천개 밀어 넣기 프로시저

DECLARE
 i NUMBER := 1;
BEGIN
	while i <= 1000 loop
		INSERT INTO TB_NOTICE (
					NOTICE_SEQ
					, NOTICE_WRITER_ID
					, NOTICE_SUBJECT
					, NOTICE_CONTENTS
					, NOTICE_REG_ID
					, NOTICE_REG_DT
					, NOTICE_MOD_ID
					, NOTICE_MOD_DT
					, NOTICE_DEL_ID
					, NOTICE_DEL_DT
					, NOTICE_VIEWS
					, USE_YN
			) VALUES (
				TB_NOTICE_SEQ.NEXTVAL
				, '작성자 ID_'||i
				, '제목_'||i
				, '내용'||i
				, '아이디_'||i
				, SYSDATE
				, ''
				, ''
				, ''
				, ''
				, 0
				, 'Y'
			);
	i := i+1;
end loop;
END;